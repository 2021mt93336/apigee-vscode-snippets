{
	"Apigee Add Post Flow": {
		"prefix": "api-flow-post",
		"body": [
            "<Flow name=\"${1:Flow}\">",
            "\t<Description/>",
            "\t<Request/>",
            "\t<Response/>",
            "\t<Condition>(proxy.pathsuffix MatchesPath \"{2}\") and (request.verb = \"POST\")</Condition>",
            "</Flow>"
        ]
	},
